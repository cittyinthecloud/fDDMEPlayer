  "bugs": {
    "url": "https://github.com/famous1622/fDDMEPlayer/issues"
  },
  "homepage": "https://github.com/famous1622/fDDMEPlayer#readme",
  "dependencies": {
    "adm-zip": "^0.4.11",
    "fs-extra": "^7.0.0",
    "klaw-sync": "^4.0.0",
    "minimatch": "^3.0.4",
    "slugify": "^1.3.0",
    "tar": "^4.4.4",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.31",
    "@types/fs-extra": "^5.0.4",
    "@types/klaw-sync": "^2.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^10.5.2",
    "@types/tar": "^4.0.0",
    "@types/tmp": "0.0.33",
