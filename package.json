{
  "name": "fddmeplayer",
  "version": "1.0.0",
  "description": "A launcher for DDLC mods",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "make": "tsc && copyfiles -e \"**/*.ts\" -u 1 \"src/**/*\" dist/",
    "dev": "npm run make && nw dist/",
    "prod": "npm run make && nwbuild --platforms win32,win64,osx64,linux32,linux64 --buildDir build/ dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/famous1622/fDDMEPlayer.git"
  },
